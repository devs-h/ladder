{
  "name": "ladder-workspace",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "demo"
  ],
  "devDependencies": {
    "concurrently": "^9.2.1"
  },
  "scripts": {
    "dev": "node scripts/dev.cjs",
    "dev:demo": "bun --hot demo/src/index.tsx",
    "dev:core": "bun run -F @ladder/core dev",
    "test:core": "bun run -F @ladder/core test",
    "dev:canvas": "bun run -F @ladder/canvas dev",
    "dev:kit": "bun run -F @ladder/kit dev",
    "build:core": "bun run -F @ladder/core build",
    "build:canvas": "bun run -F @ladder/canvas build",
    "build:kit": "bun run -F @ladder/kit build",
    "build": "concurrently -n core,canvas,kit -c auto \"bun run -F @ladder/core build\" \"bun run -F @ladder/canvas build\" \"bun run -F @ladder/kit build\""
  },
  "peerDependencies": {
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.12",
    "tailwindcss": "^4.1.12"
  }
}
